{% extends 'adminbase.html.twig' %}

{% block title %} Ürün Listesi {% endblock %}

{% block content %}
<!-- Content -->
<div class="content">
    <font size=5>Ürün Detay Sayfası</font>

    <br><br>
    <div class="content">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Publisher_id</th>
                <td>{{ product.publisherId }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ product.year }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ product.amount }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Sprice</th>
                <td>{{ product.sprice }}</td>
            </tr>
            <tr>
                <th>Minamount</th>
                <td>{{ product.minamount }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ product.detail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Writer_id</th>
                <td>{{ product.writerId }}</td>
            </tr>
            <tr>
                <th>Category_id</th>
                <td>{{ product.categoryId }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ product.userId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
        </tbody>
    </table>
        <a href="{{ path('admin_product_index') }}" class="btn btn-info btn-sm">Listeye Dön</a>

        <a href="{{ path('admin_product_edit', {'id': product.id,'pid': product.id}) }}" class="btn btn-primary btn-sm">Düzenle</a>

        <div class="pull-right">  {{ include('admin/product/_delete_form.html.twig') }}</div>
    </div>
</div>
    <!-- /.content -->
{% endblock %}
