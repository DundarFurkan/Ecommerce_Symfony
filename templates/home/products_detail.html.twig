{% extends 'frontbase.html.twig' %}

{% block title %} {{ data[0].title}} Yedek Parça Detay {% endblock %}

{% block sidebar %} {{    include ('home/_sidebar.html.twig')  }}    {% endblock %}

{% block body %}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="{{ path ('home') }}">Home</a> <span class="divider">/</span></li>
        <li><a href="#">Products</a> <span class="divider">/</span></li>
        <li class="active">product Details</li>
    </ul>
    <div class="row">

        <div id="gallery" class="span3">
            <a href="{{ asset('uploads') }}/images/{{ data[0].image }}" title="Fujifilm FinePix S2950 Digital Camera">
                <img src="{{ asset('uploads') }}/images/{{ data[0].image }}" style="width:100%" alt="Fujifilm FinePix S2950 Digital Camera"/>
            </a>

            <div id="differentview" class="moreOptopm carousel slide">
                <div class="carousel-inner">
                    <div class="item active">

                        {% for rs in images %}
                            <a href="{{ asset('uploads') }}/images/{{ rs.image }}"> <img style="width:29%" src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""/></a>
                        {% endfor %}
                    </div>

                </div>
                <!--
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                -->
            </div>

            <div class="btn-toolbar">
                <div class="btn-group">
                    <span class="btn"><i class="icon-envelope"></i></span>
                    <span class="btn" ><i class="icon-print"></i></span>
                    <span class="btn" ><i class="icon-zoom-in"></i></span>
                    <span class="btn" ><i class="icon-star"></i></span>
                    <span class="btn" ><i class=" icon-thumbs-up"></i></span>
                    <span class="btn" ><i class="icon-thumbs-down"></i></span>
                </div>
            </div>
        </div>
        <div class="span6">
            <h3>{{ data[0].title }} </h3>
            <small>{{ data[0].description }}</small>
            <hr class="soft"/>

            <form name="shopcart" class="form-horizontal qtyFrm" action="{{ path ('shopcart_new') }}" method="post">
                <div class="control-group">
                    <label class="control-label"><span>Fiyat  ${{ data[0].sprice }}</span></label>
                    <div class="controls">

                        <input type="number" name="shopcart[quantity]" class="span1" placeholder="Adet." value="1" max="{{ data[0].amount }}"/>
                        <input type="hidden" name="shopcart[productid]"  value="{{ data[0].id }}"/>

                        <input type="hidden" name="token" value="{{ csrf_token('add.item') }}">
                        <button type="submit" class="btn btn-large btn-primary pull-right"> Add to cart <i class=" icon-shopping-cart"></i></button>
                    </div>
                </div>
            </form>

            <hr class="soft"/>
            <h4>{{ data[0].amount }} adet stokta var</h4>

            <hr class="soft clr"/>
            <p>
                {{ data[0].detail|raw }}

            </p>

        </div>

        <div class="span9">
            <ul id="productDetail" class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab">Product Details</a></li>

            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="home">
                    <h4>Product Information</h4>
                    <table class="table table-bordered">
                        <tbody>
                        <tr class="techSpecRow"><th colspan="2">Product Details</th></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">YIL: </td><td class="techSpecTD2">{{ data[0].year }}</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">TİP:</td><td class="techSpecTD2">{{ data[0].type }}</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">YAYINLAMA:</td><td class="techSpecTD2"> {{ data[0].publisherid }}</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">AÇIKLAMA:</td><td class="techSpecTD2"> <h5>{{ data[0].description }}</h5></td></tr>

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</div>
    </div>
    </div>
    </div>
    {% endblock %}


