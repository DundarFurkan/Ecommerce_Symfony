{% extends 'frontbase.html.twig' %}


{% block title %} İletişim {{ data[0].title}} {% endblock %}
{% block keywords %} {{ data[0].keywords}} {% endblock %}
{% block description %} {{ data[0].description}} {% endblock %}

{% block body %}

    <div class="container">
        <hr class="soften" >
        <h1>İletişim</h1>
        <hr class="soften" >
        <div class="row">
            <div class="span4">
                <h4>Contact Details</h4>
                <p>{{ data[0].address}}
                    <br><br>
                    FAX :{{ data[0].fax}}<br><br>
                    PHONE :{{ data[0].phone}}<br><br>
                    EMAİL :{{ data[0].email}}<br><br>
                   COMPANY : {{ data[0].company}}<br><br>
                   {{ data[0].contact|raw}}
                </p>
            </div>

            <div class="span4">
                <h4>Opening Hours</h4>
                <h5> Monday - Friday</h5>
                <p>09:00am - 09:00pm<br><br></p>
                <h5>Saturday</h5>
                <p>09:00am - 07:00pm<br><br></p>
                <h5>Sunday</h5>
                <p>12:30pm - 06:00pm<br><br></p>
            </div>

            <div class="span4">
                <h4>Email Us</h4>

                <form class="form-horizontal" name="messages" method="post">
                    <fieldset>
                        <div class="control-group">

                            <input type="text" name="messages[name]" placeholder="name" class="input-xlarge">

                        </div>
                        <div class="control-group">

                            <input type="text" name="messages[email]" placeholder="email" class="input-xlarge">

                        </div>
                        <div class="control-group">

                            <input type="text" name="messages[subject]" placeholder="subject" class="input-xlarge">

                        </div>
                        <div class="control-group">
                            <textarea rows="3" name="messages[message]"  id="textarea" class="input-xlarge"></textarea>

                        </div>
                        <input type="hidden" name="messages[status]" value="New">
                        <input type="hidden" name="token" value="{{ csrf_token('form-messeage') }}" />

                        <button class="btn btn-large" type="submit" >Send Messages</button>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>

{% endblock %}




